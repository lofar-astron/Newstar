% Standard LaTeX macros
%
	\newcommand{\centering}{}
%
% scripting macros
%
	\newcommand{\scmd}[1]{~\\\hspace{2mm} $>$\ {\sf #1}}	
	\newcommand{\skeyword}[1]{\\$\bigotimes$\ {\bf #1}}
	\newcommand{\sprompt}[1]{~{\footnotesize #1}}
	\newcommand{\sdefault}[1]{~{\small #1}}
	\newcommand{\suser}[1]{~\hspace{1mm}\fbox{\large \sf #1}}
	\newcommand{\sline}[1]{
		\\\hspace*{3mm}{\tt #1}}
	\newcommand{\slong}[1]{
		\\\hspace*{-10mm}{\tt #1}}
	\newcommand{\sskip}{}
	\newcommand{\sinline}[1]{
		\normalsize \hspace*{\fill}\-\hspace*{\fill}\mbox{\it #1} }
	\newcommand{\scomment}[1]{\\{\it #1} }
	\newcommand{\setc}{
		~\\\hspace*{7mm}$\vdots$ }
	\newcommand{\scr}{~{\small \sf $<$CR$>$}}
	\newcommand{\seof}{~{\small \sf $<$EOF$>$} }
	\newcommand{\spbegin}{ }
	\newcommand{\spend}{ }
	\newcommand{\svbegin}{ }
	\newcommand{\svend}{ }
%
% referencing macros
%
	\newcommand{\eqref}[1]{\htmladdnormallink{equation}{ \##1}}
	\newcommand{\Eqref}[1]{\htmladdnormallink{Equation}{ \##1}}
	\newcommand{\figref}[1]{\htmladdnormallink{figure}{ \##1}}
	\newcommand{\Figref}[1]{\htmladdnormallink{Figure}{ \##1}}
 	\newcommand{\ascref}[2]{\htmladdnormallink{#1}{#2}}
	\newcommand{\Ascref}[2]{\htmladdnormallink{{\bf #1}}{#2}}
	\newcommand{\textref}[2]{\htmladdnormallink{#1}{#2}}
	\newcommand{\Textref}[2]{\htmladdnormallink{{\bf #1}}{#2}}
	\newcommand{\psref}[2]{\htmladdnormallink{#1}{#2}}
	\newcommand{\Psref}[2]{\htmladdnormallink{{\bf #1}}{#2}}
	\newcommand{\srcref}[2]{\htmladdnormallink{#1}{#2}}
	\newcommand{\Srcref}[2]{\htmladdnormallink{{\bf #1}}{#2}}
	\newcommand{\whichref}[2]{#1}
